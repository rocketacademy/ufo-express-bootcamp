<%- include('header'); -%>
<body class="bg-dark">
  <div class="container text-center">
    <br />
    <h1>List of Sightings</h1>
    <br />
    <table
      class="table table-hover table-dark table-bordered table-responsive-lg"
    >
      <thead>
        <tr>
          <th>No</th>
          <th>Date</th>
          <th>City</th>
          <th>State</th>
          <th>Shape</th>
          <th>Duration</th>
          <th>Created</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for( let i = 0; i < sightings.length; i++ ) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= formatDate(sightings[i].date_time) %></td>
          <td><%= sightings[i].city %></td>
          <td><%= sightings[i].state %></td>
          <td><%= sightings[i].shape %></td>
          <td><%= sightings[i].duration %></td>
          <td><%= daysFromNow(sightings[i].createTime) %></td>
          <td>
            <a href="/sighting/<%= i %>" class="btn btn-info">Edit</a>
          </td>
          <% } %>
        </tr>
      </tbody>
    </table>
    <br />
    <a href="/sighting">
      <input
        type="button"
        value="Add New Sighting"
        class="btn bg-primary text-white btn-lg"
      />
    </a>
  </div>
</body>
<%- include('footer'); -%>
