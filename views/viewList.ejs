<%- include('header', {title: `Home`}); -%>


<div class="flex justify-left m-4">
  <span class="p-2 mr-4 rounded-lg bg-teal-500 text-white">Visit counter: <%= visit_counter %></span>
  <div>
    <div class="dropdown relative">
      <a
        class="
          dropdown-toggle
          px-6
          py-2.5
          bg-teal-500
          text-white
          font-medium
          text-xs
          leading-tight
          uppercase
          rounded-lg
          shadow-md
          hover:bg-teal-700 hover:shadow-lg
          focus:bg-teal-700 focus:shadow-lg focus:outline-none focus:ring-0
          active:bg-teal-800 active:shadow-lg active:text-white
          transition
          duration-150
          ease-in-out
          flex
          items-center
          whitespace-nowrap
        "
        href="#"
        type="button"
        id="dropdownMenuButton2"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        Sort by
        <svg
          aria-hidden="true"
          focusable="false"
          data-prefix="fas"
          data-icon="caret-down"
          class="w-2 ml-2"
          role="img"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 320 512"
        >
          <path
            fill="currentColor"
            d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z"
          ></path>
        </svg>
      </a>
      <ul
        class="
          dropdown-menu
          min-w-max
          absolute
          hidden
          bg-white
          text-base
          z-50
          float-left
          py-2
          list-none
          text-left
          rounded-lg
          shadow-lg
          mt-1
          hidden
          m-0
          bg-clip-padding
          border-none
        "
        aria-labelledby="dropdownMenuButton2"
      >
        <li>
          <a
            class="
              dropdown-item
              text-sm
              py-2
              px-4
              font-normal
              block
              w-full
              whitespace-nowrap
              bg-transparent
              text-gray-700
              hover:bg-gray-100
            "
            href="/?sortBy=date"
            >Date</a
          >
        </li>
        <li>
          <a
            class="
              dropdown-item
              text-sm
              py-2
              px-4
              font-normal
              block
              w-full
              whitespace-nowrap
              bg-transparent
              text-gray-700
              hover:bg-gray-100
            "
            href="/?sortBy=city"
            >City</a
          >
        </li>
        <li>
          <a
            class="
              dropdown-item
              text-sm
              py-2
              px-4
              font-normal
              block
              w-full
              whitespace-nowrap
              bg-transparent
              text-gray-700
              hover:bg-gray-100
            "
            href="/?sortBy=shape"
            >Shape</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="border-b">
            <tr>
              <th scope="col" class="table-header">
                #
              </th>
              <th scope="col" class="table-header">
                Date & Time
              </th>
              <th scope="col" class="table-header">
                City
              </th>
              <th scope="col" class="table-header">
                Shape
              </th>
              <th scope="col" class="table-header">
                Action
              </th>
            </tr>
          </thead>

          <tbody>
          <% sightings.forEach((element, index) => { %>
            <tr class="border-b">
            <form action="/sighting/<%= element.index %>?_method=DELETE" method="POST">
             <td class="table-cell font-medium"><a href="/sighting/<%= element.index %>"><%= index %></a></td>
              <td class="table-cell font-light">
                <a href="/sighting/<%= element.index %>"><%= element.date %> <%= element.time %></a>
              </td>
              <td class="table-cell font-light">
                <a href="/sighting/<%= element.index %>"><%= element.city %></a>
              </td>
              <td class="table-cell font-light">
                <a href="/sighting/<%= element.index %>"><%= element.shape %></a>
              </td>
              
              <td class="table-cell font-light">
                <a href="/sighting/<%= element.index %>/edit">
                <input type="button" value="Edit" class="btn" /></a>
                <input class="btn" type="submit" value="Delete" />
              </td>
            </form>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

</body>
</html>