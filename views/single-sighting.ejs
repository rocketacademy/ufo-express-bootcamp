<html>
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="header">
      <h1>Single Incident Report: Index <%= singleSightingIndex %></h1>
    </div>
    <div class="container-fluid">
      <% Object.keys(singleSightingData).forEach((objectKey) => { %>
      <div class="row">
        <div class="col-md-2" id="category"><%= objectKey %>:</div>
        <div class="col-md-8" id="response">
          <%= singleSightingData[objectKey] %>
        </div>
        <% }) %>
      </div>

      <div class="d-grid gap-2">
        <a
          class="btn btn-primary"
          href="/sighting/<%= singleSightingIndex %>/edit "
          role="button"
          >Edit ✏</a
        >
        <form
          id="delete-button"
          action="/sighting/<%= singleSightingIndex %>/delete?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-secondary" type="submit">Delete 🚫</button>
        </form>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
